<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Notes.NewPage1"
             Title="NewPage1">
    <VerticalStackLayout>
        <Image
            Source="github.png"
            HeightRequest="250"
            Aspect="AspectFit"
            SemanticProperties.Description="Logo do GitHub" />
        <Label 
            Text="Notes App v1.0"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />
        <Button
            x:Name="EnviarGitBtn"
            Text="Ir para o Git Hub" 
            SemanticProperties.Hint="Vai para o GitHub"
            Clicked="EnviarGitBtn_Clicked"
            HorizontalOptions="Fill" />
    </VerticalStackLayout>
</ContentPage>